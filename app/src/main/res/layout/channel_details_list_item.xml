<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:scaleType="fitXY"
            android:id="@+id/channel_detail_list_itm_episodeImageButton"
            android:src="@drawable/ic_fingerprint_black_24dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Episode Title"
                    android:id="@+id/channel_detail_list_itm_episodeTitle"
                    android:layout_weight="1"
                    android:maxLines="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/channel_detail_list_itm_selectedCheckbox"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/channel_detail_list_itm_durationIcon"
                    android:src="?ic_access_time"
                    android:layout_weight="0"
                    android:layout_gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="55:34"
                    android:id="@+id/channel_detail_list_itm_duration"
                    android:layout_gravity="left"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/channel_detail_list_itm_sizeIcon"
                    android:src="?ic_storage"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="23MB"
                    android:id="@+id/channel_detail_list_itm_fileSize"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="05/09/2014"
                    android:id="@+id/channel_detail_list_itm_releaseDate"
                    android:layout_gravity="right"
                    android:layout_weight="0"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is the description of the podcast which can be very very long and should be cut so that it does not overflow onto the other UI components which are next to it and have the right to exists without being affected by this bully textview."
        android:id="@+id/channel_detail_list_itm_episodeDescription"
        android:maxLines="3"
        android:visibility="visible"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_details_giveTipButton"
            android:src="?ic_attach_money"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_detail_list_itm_gotoWebSiteButton"
            android:src="?ic_link"
            android:layout_toLeftOf="@+id/channel_detail_list_itm_downloadEpisodeButtons" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_detail_list_itm_downloadEpisodeButtons"
            android:src="?ic_download"
            android:layout_toLeftOf="@+id/channel_detail_list_itm_playButton" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channel_detail_list_itm_playButton"
            android:src="?ic_play_circle"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>






</LinearLayout>


