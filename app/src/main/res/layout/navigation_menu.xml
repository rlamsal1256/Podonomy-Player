<?xml version="1.0" encoding="utf-8"?>
<!-- The nave menu is a dialog that popups at the bottom left when pressing the nav
     button in the navbar.  This nav menu shows the list of activity the user can navigate
     to. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="bottom">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navmenu_listview"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navmenu_listview"
        android:layout_alignParentBottom="false">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previousButton"
            android:src="?ic_skip_previous"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/episodeImageButton"
            android:src="?ic_fingerprint"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playPauseButton"
            android:src="?ic_play_arrow"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton"
            android:src="?ic_skip_next"/>
    </LinearLayout>


</RelativeLayout>
