<?xml version="1.0" encoding="utf-8"?><!-- This is the layout of the navbar which appears at the bottom of the screen.
     The navbar allows the user to navigate to other activities and perform actions
     realted to the current activity. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="bottom">


    <ImageButton
        android:id="@+id/navButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:src="?ic_menu"
        android:layout_alignParentLeft="true" />


    <Spinner
        android:orientation="horizontal"
        android:id="@+id/navBar_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/navButton"
        android:layout_toLeftOf="@+id/navBar_sort"
        android:layout_alignBottom="@+id/navButton"
        android:layout_alignTop="@+id/navButton"
        android:layout_gravity="center"
        android:visibility="gone"
        android:spinnerMode="dropdown"
        android:dropDownWidth="wrap_content"
        android:dropDownVerticalOffset="25dp"/>

    <ImageButton
        android:id="@+id/navbar_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?ic_search"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/navBar_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/actionButton"
        android:layout_alignBottom="@+id/navButton"
        android:layout_alignTop="@+id/navButton"
        android:src="?ic_sort"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="9"
        android:layout_gravity="center|right"
        android:src="?ic_more_vert"
        android:layout_alignParentRight="true" />

</RelativeLayout>

